{
  "name": "emperor-ruppy",
  "version": "1.0.0-alpha.0",
  "description": "All rounder emperor with focus on developer üê£",
  "author": "Latipun <latifsulisyo.me@gmail.com> (https://ruppy.io)",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=12.8.3",
    "yarn": ">=1.19.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ruppyio/emperor-ruppy.git"
  },
  "scripts": {
    "build": "yarn test:all && tsc",
    "dev": "ts-node --files -r tsconfig-paths/register -r dotenv/config ./src/index.ts",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --fix --color --cache .",
    "format": "prettier --write .",
    "start": "pm2 --name emperor-ruppy --node-args \"-r ./tsconfig-paths-bootstrap.js -r dotenv/config\" start dist/src",
    "test": "jest",
    "test:all": "rimraf dist && yarn lint && yarn format && yarn test"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "common-tags": "^1.8.0",
    "discord-akairo": "^8.1.0",
    "discord.js": "^12.4.1",
    "dotenv": "^8.2.0",
    "emoji-regex": "^9.2.0",
    "pg": "^8.4.1",
    "pretty-ms": "^7.0.1",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.28",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/common-tags": "^1.8.0",
    "@types/node": "^14.14.3",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.12.0",
    "eslint-config-ruppy-jest": "^1.0.0",
    "eslint-config-ruppy-node": "^1.3.1",
    "eslint-config-ruppy-ts": "^1.2.1",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,yml,yaml,md,mdx,html,css,sass,scss,graphql}": "prettier --write",
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --color --cache"
    ]
  }
}
